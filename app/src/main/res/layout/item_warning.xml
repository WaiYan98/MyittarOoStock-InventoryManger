<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_item"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_pill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_name_column"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_name_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/img_item"
        app:layout_constraintEnd_toStartOf="@id/txt_date_column"
        app:layout_constraintStart_toEndOf="@id/img_item"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_date_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exp_Date"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/txt_name_column"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txt_name_column"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decogen"
        android:textColor="@color/red"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/img_item"
        app:layout_constraintEnd_toEndOf="@id/txt_name_column"
        app:layout_constraintStart_toStartOf="@id/txt_name_column"
        app:layout_constraintTop_toTopOf="@id/img_item" />

    <TextView
        android:id="@+id/txt_exp_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/11/23"
        android:textColor="@color/red"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/txt_item_name"
        app:layout_constraintEnd_toEndOf="@id/txt_date_column"
        app:layout_constraintStart_toStartOf="@id/txt_date_column"
        app:layout_constraintTop_toTopOf="@id/txt_item_name" />


</androidx.constraintlayout.widget.ConstraintLayout>