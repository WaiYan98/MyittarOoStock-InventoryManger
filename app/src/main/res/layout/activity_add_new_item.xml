<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".batch_fragment.AddNewBatchActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/little_dark_white"
        android:theme="@style/AppTheme.Toolbar"
        app:menu="@menu/add_new_item_app_bar"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Add New Item"
        app:titleCentered="true"
        app:titleTextColor="@color/grey" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/large_margin"
                    android:layout_marginBottom="@dimen/medium_margin"
                    android:text="Item Name"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/small_text_size"
                    android:textStyle="bold" />

                <AutoCompleteTextView
                    android:id="@+id/act_stock_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edt_height"
                    android:layout_marginStart="@dimen/large_margin"
                    android:layout_marginEnd="@dimen/large_margin"
                    android:layout_marginBottom="@dimen/large_margin"
                    android:background="@drawable/rounded_rectangle_white"
                    android:elevation="8dp"
                    android:gravity="center_vertical|start"
                    android:paddingStart="8dp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/large_margin"
                    android:layout_marginBottom="@dimen/medium_margin"
                    android:text="Select Exp Date"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/small_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edt_height"
                    android:layout_marginStart="@dimen/large_margin"
                    android:layout_marginEnd="@dimen/large_margin"
                    android:layout_marginBottom="@dimen/large_margin"
                    android:background="@drawable/rounded_rectangle_white"
                    android:elevation="8dp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="8dp"
                    android:text="8/7/21"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/large_margin"
                    android:layout_marginBottom="@dimen/medium_margin"
                    android:text="Total Amount"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/small_text_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_amount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edt_height"
                    android:layout_marginStart="@dimen/large_margin"
                    android:layout_marginEnd="@dimen/large_margin"
                    android:layout_marginBottom="@dimen/large_margin"
                    android:background="@drawable/rounded_rectangle_white"
                    android:elevation="8dp"
                    android:gravity="center_vertical|start"
                    android:inputType="number"
                    android:paddingStart="8dp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/large_margin"
                    android:layout_marginBottom="@dimen/medium_margin"
                    android:text="Cost Price"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/small_text_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_cost_price"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edt_height"
                    android:layout_marginStart="@dimen/large_margin"
                    android:layout_marginEnd="@dimen/large_margin"
                    android:layout_marginBottom="@dimen/large_margin"
                    android:background="@drawable/rounded_rectangle_white"
                    android:elevation="8dp"
                    android:gravity="center_vertical|start"
                    android:inputType="numberDecimal"
                    android:paddingStart="8dp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/large_margin"
                    android:layout_marginBottom="@dimen/medium_margin"
                    android:text="Sale Price"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/small_text_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_sale_price"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edt_height"
                    android:layout_marginStart="@dimen/large_margin"
                    android:layout_marginEnd="@dimen/large_margin"
                    android:layout_marginBottom="@dimen/large_margin"
                    android:background="@drawable/rounded_rectangle_white"
                    android:elevation="8dp"
                    android:gravity="center_vertical|start"
                    android:inputType="numberDecimal"
                    android:paddingStart="8dp"
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>